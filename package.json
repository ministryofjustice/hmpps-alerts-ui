{
  "name": "hmpps-alerts-ui",
  "version": "0.0.1",
  "description": "Hmpps Alerts Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-alerts-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "npx nyc instrument dist --nycrc-path ./.nycrc && node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests && tsc -p server/routes",
    "test": "jest",
    "test:ci": "jest",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test"
  },
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "coverageDirectory": "test_results/jest/",
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      ".*.test.ts",
      "node_modules",
      "server/@types",
      ".*jest.config.js",
      "server/app.ts",
      "server/index.ts",
      ".*.cy.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.888.0",
    "@cypress/code-coverage": "^3.14.6",
    "@ministryofjustice/frontend": "^5.1.5",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.3",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.2.0",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1",
    "@ministryofjustice/hmpps-rest-client": "^0.0.3",
    "@sentry/cli": "^2.53.0",
    "@sentry/node": "^9.46.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "csv-parse": "^5.6.0",
    "cypress-circleci-reporter": "^0.3.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.11.2",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "openapi-typescript": "^7.9.1",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "superagent": "^10.2.3",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.4",
    "@ministryofjustice/hmpps-precommit-hooks": "^0.0.3",
    "@testing-library/cypress": "^10.1.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cypress__code-coverage": "^3.10.2",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.18.4",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.10.3",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.7.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.9",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.6",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.92.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.5"
  }
}
