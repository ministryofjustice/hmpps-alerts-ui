{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

    {{ govukSummaryList({
      classes: "govuk-!-margin-bottom-7",
      rows: [
        {
          key: {
          text: "Alert type"
        },
          value: {
          text: journey.alertType.code + ' (' + journey.alertType.description + ')'
        },
          actions: {
          items: [
            {
              href: "select-alert-type",
              text: "Change",
              visuallyHiddenText: "the alert type",
              classes: "govuk-link--no-visited-state"
            }
          ]
        }
        },
        {
          key: {
          text: "Alert"
        },
          value: {
          text: journey.alertCode.code + ' (' + journey.alertCode.description + ')'
        },
          actions: {
          items: [
            {
              href: "select-alert-code",
              text: "Change",
              visuallyHiddenText: "the alert to be edited",
              classes: "govuk-link--no-visited-state"
            }
          ]
        }
        },
        {
          key: {
          text: "New alert description"
        },
          value: {
          text: journey.description
        },
          actions: {
          items: [
            {
              href: "edit-alert-code",
              text: "Change",
              visuallyHiddenText: "the new alert description",
              classes: "govuk-link--no-visited-state"
            }
          ]
        }
        }
      ]
    }) }}
