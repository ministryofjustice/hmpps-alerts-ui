{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "partials/layout.njk" %}

{% set heading = "Edit alert description" %}
{% set pageTitle = "Edit alert description - Maintain alerts reference data" %}
{% set mainClasses = "govuk-body govuk-!-static-padding-top-0" %}
{% block content %}
  <div class="govuk-grid-row govuk-!-margin-top-6">
    <div class="govuk-grid-column-two-thirds">
      {% include 'update-reference-data/common/components/caption.njk' %}
      <h1 class="govuk-heading-l govuk-!-margin-bottom-7">{{ heading }}</h1>
      <form method="post" novalidate="novalidate" autocomplete="off">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukInput({
          label: {
            text: "Enter a new alert description"
          },
          classes: "govuk-input--width-full",
          errorMessage: validationErrors | findError('description'),
          id: "description",
          name: "description",
          value: description
        }) }}
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
          }) }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
