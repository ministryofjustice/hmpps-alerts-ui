{% extends "../../partials/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set pageTitle = applicationName + " - Create alert type success" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="govuk-!-margin-bottom-9">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {{ govukPanel({
                    titleText: "An error occurred",
                    html: "Your alert type was not created",
                    classes: 'govuk-panel-confirmation-error'
                }) }}
                <div class="govuk-!-margin-top-8">
                    <p class="govuk-body">
                        <a class="govuk-link" href="/">Return to Alerts Management</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
