{% extends "../../partials/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Create alert type success" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="govuk-!-margin-bottom-9">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {{ govukPanel({
                    titleText: "Alert type created",
                    html: "Alert type created with code: <strong>" + alertTypeCode + "</strong> and description <strong>" + alertTypeDescription + "</strong>"
                }) }}
                <div class="govuk-!-margin-top-8">
                    <p class="govuk-body">
                        <a class="govuk-link" href="/">Return to Alerts Management</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
