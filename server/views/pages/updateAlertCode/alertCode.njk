{% extends "../../partials/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set pageTitle = applicationName + " - Update alert code description" %}
{% set mainClasses = "app-container govuk-body" %}
{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "/alert-code/update-description"
    }) }}
{% endblock %}
{% block content %}
    <div class="govuk-!-margin-bottom-5">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-three-quarters">
                {% if  alertCodeErrorMessage %}
                    {% include './partials/updateAlertCodeErrorBanner.njk' %}
                {% endif %}
                <span class="govuk-caption-xl">Update alert code description</span>
                <form method="post">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                    {{ govukRadios({
                        name: "alertCode",
                        fieldset: {
                            legend: {
                                text: "Select an alert code",
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--xl"
                            }
                        },
                        items: codes
                    }) }}
                    {{ govukButton({
                        text: "Continue",
                        type: submit,
                        value: 'alert-code',
                        preventDoubleClick: true,
                        attributes: {  'data-qa': 'alert-code' }
                    }) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
